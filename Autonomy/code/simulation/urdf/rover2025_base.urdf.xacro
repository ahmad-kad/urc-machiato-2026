<?xml version="1.0"?>
<robot xmlns:xacro="http://wiki.ros.org/xacro" name="rover2025_base">

  <!-- Properties -->
  <xacro:property name="wheel_radius" value="0.15"/>
  <xacro:property name="wheel_width" value="0.12"/>
  <xacro:property name="track" value="0.6"/>
  <xacro:property name="wheelbase" value="0.8"/>

  <!-- Material definitions -->
  <material name="gray">
    <color rgba="0.5 0.5 0.5 1.0"/>
  </material>

  <material name="black">
    <color rgba="0.1 0.1 0.1 1.0"/>
  </material>

  <!-- Base structure (simplified from original URDF) -->
  <link name="robot_root">
    <collision name="body_collision">
      <origin rpy="0 0 0" xyz="-0.01465 -0.00549 0.16037"/>
      <geometry>
        <box size="1.22213 0.86180 0.62853"/>
      </geometry>
    </collision>
  </link>

  <link name="robot_base">
    <visual name="body">
      <material name="gray"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="1.09671 0.77336 0.78564"/>
      </geometry>
    </visual>
  </link>

  <joint name="robot_base_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 -0.0005"/>
    <parent link="robot_root"/>
    <child link="robot_base"/>
  </joint>

  <!-- Camera mount -->
  <link name="new_link.000">
    <sensor name="rgbd" type="camera">
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <camera>
        <image>
          <width>1080</width>
          <height>1920</height>
          <hfov>1.5708</hfov>
        </image>
      </camera>
    </sensor>
  </link>

  <joint name="camera1" type="fixed">
    <origin rpy="-0.00000 1.57080 0.00000" xyz="0.33301 -0.09643 0.81950"/>
    <parent link="robot_root"/>
    <child link="new_link.000"/>
  </joint>

  <!-- GPS mount -->
  <link name="gps">
    <sensor name="gps.001" type="GPS"/>
  </link>

  <joint name="gps_locator" type="fixed">
    <origin rpy="0.00000 0.00000 0.00000" xyz="0.09323 0.00000 0.65743"/>
    <parent link="robot_root"/>
    <child link="gps"/>
    <axis xyz="0.00000 0.00000 1.00000"/>
  </joint>

  <!-- Wheel steering joints (from original URDF) -->
  <joint name="rotate_L_back" type="revolute">
    <limit lower="-2.96706" upper="2.96706" effort="0.00000" velocity="0.00000"/>
    <origin rpy="0 0 0" xyz="0.43705 -0.37063 0.32476"/>
    <parent link="robot_base"/>
    <child link="robot_wheel_l_front_actuator_link.005"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="rotate_L_front" type="revolute">
    <limit lower="-2.96706" upper="2.96706" effort="0.00000" velocity="0.00000"/>
    <origin rpy="0 0 0" xyz="-0.57753 -0.37063 0.32476"/>
    <parent link="robot_base"/>
    <child link="robot_wheel_l_front_actuator_link.003"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="rotate_R_back" type="revolute">
    <limit lower="-2.96706" upper="2.96706" effort="0.00000" velocity="0.00000"/>
    <origin rpy="0 0 -3.14159" xyz="0.43705 0.32063 0.32476"/>
    <parent link="robot_base"/>
    <child link="robot_wheel_l_front_actuator_link.011"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="rotate_R_front" type="revolute">
    <limit lower="-2.96706" upper="2.96706" effort="0.00000" velocity="0.00000"/>
    <origin rpy="0 0 -3.14159" xyz="-0.57753 0.32063 0.32476"/>
    <parent link="robot_base"/>
    <child link="robot_wheel_l_front_actuator_link.008"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- Wheel actuator links (simplified) -->
  <link name="robot_wheel_l_front_actuator_link.003">
    <inertial>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
      <mass value="1.0"/>
    </inertial>
  </link>

  <link name="robot_wheel_l_front_actuator_link.005">
    <inertial>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
      <mass value="1.0"/>
    </inertial>
  </link>

  <link name="robot_wheel_l_front_actuator_link.008">
    <inertial>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
      <mass value="1.0"/>
    </inertial>
  </link>

  <link name="robot_wheel_l_front_actuator_link.011">
    <inertial>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
      <mass value="1.0"/>
    </inertial>
  </link>

  <!-- Wheel drive joints -->
  <joint name="wheel_L_front" type="continuous">
    <limit effort="0.0" velocity="0.0"/>
    <origin rpy="0 0 0" xyz="0 0 -0.15555"/>
    <parent link="robot_wheel_l_front_actuator_link.003"/>
    <child link="robot_wheel_l_front_actuator_link.004"/>
    <axis xyz="0 -1 0"/>
  </joint>

  <joint name="wheel_L_back" type="continuous">
    <limit effort="0.0" velocity="0.0"/>
    <origin rpy="0 0 0" xyz="0 0 -0.15555"/>
    <parent link="robot_wheel_l_front_actuator_link.005"/>
    <child link="robot_wheel_l_front_actuator_link.006"/>
    <axis xyz="0 -1 0"/>
  </joint>

  <joint name="wheel_R_front" type="continuous">
    <limit effort="0.0" velocity="0.0"/>
    <origin rpy="0 0 0" xyz="0 0 -0.15555"/>
    <parent link="robot_wheel_l_front_actuator_link.008"/>
    <child link="robot_wheel_l_front_actuator_link.009"/>
    <axis xyz="0 -1 0"/>
  </joint>

  <joint name="wheel_R_back" type="continuous">
    <limit effort="0.0" velocity="0.0"/>
    <origin rpy="0 0 0" xyz="0 0 -0.15555"/>
    <parent link="robot_wheel_l_front_actuator_link.011"/>
    <child link="robot_wheel_l_front_actuator_link.012"/>
    <axis xyz="0 -1 0"/>
  </joint>

  <!-- Wheel links (simplified) -->
  <link name="robot_wheel_l_front_actuator_link.004">
    <collision name="wheel_l_front_collision">
      <origin rpy="1.5708 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.15" length="0.12"/>
      </geometry>
    </collision>
    <visual name="wheel_l_front">
      <material name="black"/>
      <origin rpy="1.5708 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.15" length="0.12"/>
      </geometry>
    </visual>
    <inertial>
      <mass value="3.0"/>
      <inertia ixx="0.05" ixy="0.0" ixz="0.0" iyy="0.05" iyz="0.0" izz="0.025"/>
    </inertial>
  </link>

  <link name="robot_wheel_l_front_actuator_link.006">
    <collision name="wheel_l_back_collision">
      <origin rpy="1.5708 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.15" length="0.12"/>
      </geometry>
    </collision>
    <visual name="wheel_l_back">
      <material name="black"/>
      <origin rpy="1.5708 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.15" length="0.12"/>
      </geometry>
    </visual>
    <inertial>
      <mass value="3.0"/>
      <inertia ixx="0.05" ixy="0.0" ixz="0.0" iyy="0.05" iyz="0.0" izz="0.025"/>
    </inertial>
  </link>

  <link name="robot_wheel_l_front_actuator_link.009">
    <collision name="wheel_r_front_collision">
      <origin rpy="1.5708 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.15" length="0.12"/>
      </geometry>
    </collision>
    <visual name="wheel_r_front">
      <material name="black"/>
      <origin rpy="1.5708 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.15" length="0.12"/>
      </geometry>
    </visual>
    <inertial>
      <mass value="3.0"/>
      <inertia ixx="0.05" ixy="0.0" ixz="0.0" iyy="0.05" iyz="0.0" izz="0.025"/>
    </inertial>
  </link>

  <link name="robot_wheel_l_front_actuator_link.012">
    <collision name="wheel_r_back_collision">
      <origin rpy="1.5708 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.15" length="0.12"/>
      </geometry>
    </collision>
    <visual name="wheel_r_back">
      <material name="black"/>
      <origin rpy="1.5708 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.15" length="0.12"/>
      </geometry>
    </visual>
    <inertial>
      <mass value="3.0"/>
      <inertia ixx="0.05" ixy="0.0" ixz="0.0" iyy="0.05" iyz="0.0" izz="0.025"/>
    </inertial>
  </link>

</robot>
