# Mission configuration service
# Sets up mission parameters before autonomous execution

# Request: Mission specification
string mission_name
string[] objectives  # ["navigate", "typing", "sample_collection", etc.]

# Waypoint configuration
geometry_msgs/PoseStamped[] waypoints
string[] waypoint_names
bool[] precision_required  # Whether precision approach needed
float32[] waypoint_tolerances  # Acceptable position error (meters)

# Timing constraints
float32 time_limit  # Maximum mission duration (seconds)
float32 waypoint_timeout  # Timeout per waypoint (seconds)

# Navigation parameters
float32 max_linear_velocity  # m/s
float32 max_angular_velocity  # rad/s
float32 waypoint_approach_tolerance  # meters

# Mission-specific parameters
string typing_text  # Text to type (if typing objective)
geometry_msgs/PoseStamped typing_location  # Where to perform typing

# Environmental parameters
string terrain_type  # "rough", "smooth", "mixed"
float32 max_incline  # Maximum allowed terrain incline (degrees)

---
# Response: Configuration result
bool success
string message
string mission_id  # Unique identifier for configured mission
float32 estimated_duration  # Expected mission time (seconds)
int32 total_waypoints  # Number of waypoints configured
string[] configured_objectives  # Objectives that were successfully configured
